# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_WORKERS=1

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb
VECTOR_DB_COLLECTION_NAME=cv_job_embeddings
VECTOR_DB_PERSIST_DIRECTORY=./vector_db
CHROMADB_COLLECTION_NAME=cv_job_embeddings
CHROMADB_PERSIST_DIRECTORY=./vector_db

# Processing Configuration
BATCH_SIZE=32
MAX_TEXT_LENGTH=512
CHUNK_SIZE=200
CHUNK_OVERLAP=50
MAX_FILE_SIZE_MB=10
UPLOAD_DIRECTORY=./uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/semantic_matcher.log

# Matching Thresholds
EXCELLENT_MATCH_THRESHOLD=0.85
GOOD_MATCH_THRESHOLD=0.70
FAIR_MATCH_THRESHOLD=0.50
MINIMUM_MATCH_THRESHOLD=0.30

# LLM Configuration
LLM_PROVIDER=ollama
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.1:8b
LLM_API_KEY=

